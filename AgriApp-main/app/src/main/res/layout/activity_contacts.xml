<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/LightCyan"
    android:layout_height="match_parent"
    tools:context=".Contacts">

    <TextView
        android:id="@+id/Link1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ContactHeading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="@string/samplecontact"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ContactHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="@string/contacts2"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Link2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Link1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="@string/samplecontact"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Link3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Link2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="@string/samplecontact"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Link4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Link3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="@string/samplecontact"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Link4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="@string/contact_91xxxxxxxx"
        android:textColor="@color/black"
        android:textSize="18sp" />


</RelativeLayout>